{% comment %} Individual Page css {% endcomment %}
{%- if template.name == 'list-collections' or template.name == 'collection' or template.name == 'index' or template.name == 'cart'  or template == 'search' -%}
    {{ 'component-card.css' | asset_url | stylesheet_tag }}
    {{ 'component-swatch.css' | asset_url | stylesheet_tag: preload: true }}
    {% if template.name == 'cart' %}
        {{ 'template-cart.css' | asset_url | stylesheet_tag }}
    {% endif %}
    {% if template.name == 'collection' or template == 'search' %}
        {{ 'component-filter.css' | asset_url | stylesheet_tag }}
    {% endif %}
