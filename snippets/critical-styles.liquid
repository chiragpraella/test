    {{ 'template-product.css' | asset_url | stylesheet_tag }}
    {{ 'component-swatch.css' | asset_url | stylesheet_tag: preload: true }}
{%- elsif template.name == 'blog' or template.name == 'article' -%}
    {{ 'template-blog.css' | asset_url | stylesheet_tag }}
{%- elsif template.directory == 'customers' -%}
    {{ 'template-account.css' | asset_url | stylesheet_tag }}
{%- elsif page.handle == 'faq' -%}
    {{ 'template-faq.css' | asset_url | stylesheet_tag }}
{%- elsif page.handle == 'contact' -%}
    {{ 'template-contact.css' | asset_url | stylesheet_tag }} 
{%- endif -%}


