<div class="d-flex align-items-center mb-3 review-rating gap-1">
    {%- for i in (1..5) -%}
        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15" fill="none">
            <path d="M7.03834 1.10996C7.20914 0.699319 7.79086 0.699318 7.96166 1.10996L9.36649 4.48759C9.4385 4.6607 9.6013 4.77899 9.7882 4.79397L13.4346 5.08631C13.878 5.12185 14.0577 5.6751 13.7199 5.96444L10.9418 8.34425C10.7994 8.46623 10.7372 8.65762 10.7807 8.84L11.6295 12.3983C11.7327 12.8309 11.262 13.1728 10.8825 12.941L7.76063 11.0342C7.60062 10.9365 7.39938 10.9365 7.23937 11.0342L4.11752 12.941C3.73797 13.1728 3.26735 12.8309 3.37054 12.3983L4.21932 8.84C4.26283 8.65762 4.20064 8.46623 4.05825 8.34425L1.28005 5.96444C0.942286 5.6751 1.12205 5.12185 1.56538 5.08631L5.2118 4.79397C5.3987 4.77899 5.5615 4.6607 5.63351 4.48759L7.03834 1.10996Z" fill="{% if block.settings.star_num >= forloop.index %}{{ block.settings.active_star }}{% else %}{{ block.settings.dective_star }}{% endif %}"/>
        </svg>
    {%- endfor -%}
</div>

<style>
    .review-rating svg{
        width:{{ block.settings.star_size }}px;
        height:{{ block.settings.star_size }}px;
    }
</style>




{% schema %}
    {
        "name": "Review Star",
        "tag": null,
        "settings": [
            {
                "type": "range",
                "id": "star_num",
                "min": 1,
                "max": 5,
                "step": 1,
                "default": 5,
                "label": "Reviewer rating"
            },
            {
                "type": "color",
                "id":"active_star",
                "label": "Active Star Color",
                "default": "#0E5372"
            },
            {
                "type": "color",
                "id":"dective_star",
                "label": " Dective Star Color",
                "default": "#D5D5D5"
            },
            {
                "type": "range",
                "id": "star_size",
                "min": 15,
                "max": 50,
                "step": 1,
                "default": 20,
                "label": "Icon Size"
            }
        ],
        "presets": [
            {
                "name": "Review Star"
            }
        ]
    }
{% endschema %}
